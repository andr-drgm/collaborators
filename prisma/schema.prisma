// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  // Privy-specific fields
  privyId       String? @unique
  walletAddress String? @unique

  // GitHub-specific fields
  login    String?
  username String? @unique

  // Token tracking
  unclaimedTokens Int @default(0)

  // Internal wallet fields (legacy - can be deprecated once Privy is fully adopted)
  walletBalance             Int?
  walletEncryptedPrivateKey String?
  walletPublicKey           String? @unique

  accounts      Account[]
  sessions      Session[]
  // Optional for WebAuthn support
  Authenticator Authenticator[]

  // Project-related relationships (legacy)
  projectAssignments ProjectAssignment[]

  // Bounty marketplace relationships
  postedBounties    Bounty[]           @relation("BountyPoster")
  bountySubmissions BountySubmission[]
  botInstallations  BotInstallation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

// Optional for WebAuthn support
model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, credentialID])
}

// Bounty marketplace models
model Bounty {
  id              String  @id @default(cuid())
  githubIssueId   Int // GitHub issue number
  githubRepoOwner String // GitHub repo owner/org
  githubRepoName  String // GitHub repo name
  title           String
  description     String
  bountyAmount    Decimal // USDC amount
  bountyPosterId  String // User who posted the bounty

  // Status tracking
  status   BountyStatus @default(ACTIVE)
  isSolved Boolean      @default(false)
  solvedAt DateTime?
  solvedBy String? // Username of the user who solved it

  // GitHub integration
  githubIssueUrl String
  githubLabels   String[] // Labels added by our bot

  // Relationships
  bountyPoster User               @relation("BountyPoster", fields: [bountyPosterId], references: [id], onDelete: Cascade)
  submissions  BountySubmission[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([githubIssueId, githubRepoOwner, githubRepoName]) // One bounty per issue
}

model BountySubmission {
  id       String           @id @default(cuid())
  bountyId String
  userId   String
  prUrl    String // GitHub PR URL
  prNumber Int // GitHub PR number
  status   SubmissionStatus @default(PENDING)

  // Verification
  isVerified Boolean   @default(false)
  verifiedAt DateTime?

  // Relationships
  bounty Bounty @relation(fields: [bountyId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([bountyId, userId]) // One submission per user per bounty
}

// Enums
enum BountyStatus {
  ACTIVE // Bounty is live and open for submissions
  SOLVED // Bounty completed (manual payout by maintainer)
  EXPIRED // Bounty expired without completion
  CANCELLED // Bounty cancelled by poster
}

enum SubmissionStatus {
  PENDING
  APPROVED
  REJECTED
}

// Bot installation tracking
model BotInstallation {
  id          String  @id @default(cuid())
  owner       String // GitHub owner/org
  repo        String // GitHub repo name
  installed   Boolean @default(false)
  installedBy String // User who installed the bot

  // Relationships
  installedByUser User @relation(fields: [installedBy], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([owner, repo]) // One installation record per repo
}

// Legacy project models (deprecated - keeping for migration)
model Project {
  id          String  @id @default(cuid())
  name        String
  description String
  githubUrl   String  @unique
  owner       String // GitHub owner/org
  repo        String // GitHub repo name
  isApproved  Boolean @default(false)
  tweetUrl    String? // URL of the X post mentioning @collab0rators

  // Relationships
  projectAssignments ProjectAssignment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProjectAssignment {
  id        String @id @default(cuid())
  userId    String
  projectId String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, projectId]) // One assignment per user per project
}
