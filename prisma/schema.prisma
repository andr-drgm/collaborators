// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  // Privy-specific fields
  privyId       String? @unique
  walletAddress String? @unique

  // GitHub-specific fields
  login    String?
  username String? @unique

  // Token tracking
  unclaimedTokens Int @default(0)

  // Internal wallet fields (legacy - can be deprecated once Privy is fully adopted)
  walletBalance             Int?
  walletEncryptedPrivateKey String?
  walletPublicKey           String? @unique

  accounts      Account[]
  sessions      Session[]
  // Optional for WebAuthn support
  Authenticator Authenticator[]

  // Project-related relationships
  projectAssignments ProjectAssignment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

// Optional for WebAuthn support
model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, credentialID])
}

// Project management models
model Project {
  id          String  @id @default(cuid())
  name        String
  description String
  githubUrl   String  @unique
  owner       String // GitHub owner/org
  repo        String // GitHub repo name
  isApproved  Boolean @default(false)
  tweetUrl    String? // URL of the X post mentioning @collab0rators

  // Relationships
  projectAssignments ProjectAssignment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProjectAssignment {
  id        String @id @default(cuid())
  userId    String
  projectId String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, projectId]) // One assignment per user per project
}
